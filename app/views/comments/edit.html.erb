<div class="row">
  <div class="col-lg-12">
    <%= form_for(@comment, url: { controller: :comments, action: :update }) do |f| %>
      <div class="form-group">
        <%= f.label :body , 'コメント' %><br>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.submit "コメントを更新する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
