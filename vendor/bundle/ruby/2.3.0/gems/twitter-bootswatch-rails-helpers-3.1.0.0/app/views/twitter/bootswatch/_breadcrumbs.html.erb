<% if @breadcrumbs.present? %>
  <ol class="breadcrumb">
    <% @breadcrumbs[0..-2].each do |crumb| %>
      <li>
      	<%= link_to crumb[:name], crumb[:url], crumb[:options] %>
      </li>
    <% end %>
    <li class="active">
      <%= link_to @breadcrumbs.last[:name], @breadcrumbs.last[:url], @breadcrumbs.last[:options] %>
    </li>
  </ol>
<% end %>
